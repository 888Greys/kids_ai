# App
NODE_ENV=development

# Postgres (self-hosted Docker)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=kids_ai
POSTGRES_USER=kids_ai_user
POSTGRES_PASSWORD=change_me

# Connection string for Prisma / app backend
DATABASE_URL=postgresql://kids_ai_user:change_me@localhost:5432/kids_ai?schema=public

# OpenAI
OPENAI_API_KEY=replace_with_real_key
OPENAI_MODEL=gpt-5-mini
# Keep deterministic generator in development unless explicitly enabled.
OPENAI_ENABLE_IN_DEV=false
OPENAI_TIMEOUT_MS=10000

# Cerebras (OpenAI-compatible chat completions)
CEREBRAS_API_KEY=replace_with_real_key
CEREBRAS_MODEL=gpt-oss-120b
# Keep deterministic generator in development unless explicitly enabled.
CEREBRAS_ENABLE_IN_DEV=false
CEREBRAS_TIMEOUT_MS=10000

# AI provider selection
# AI_PROVIDER can be "openai" or "cerebras".
# If unset, the app auto-selects Cerebras when CEREBRAS_API_KEY is present,
# otherwise OpenAI when OPENAI_API_KEY is present.
AI_PROVIDER=
# Optional global timeout/enable toggles (provider-specific values override timeout).
AI_TIMEOUT_MS=10000
AI_ENABLE_IN_DEV=false
AI_ENABLE_IN_TEST=false
